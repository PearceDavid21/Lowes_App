<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.xfinity.features.masterdetail.CharacterViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:onClick="@{() -> viewModel.openArticleDetail()}">

        <ImageView
            android:id="@+id/iv_movie_detail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            app:avatar="@{viewModel.articleImage}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/v_item_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/iv_movie_detail"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/tv_movie_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mutableText="@{viewModel.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_movie_detail_overview"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_movie_detail_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mutableText="@{viewModel.source}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_movie_detail_popularity"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_movie_detail_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mutableText="@{viewModel.author}"
            android:text="Name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageview_item"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>